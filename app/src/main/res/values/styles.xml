<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Margin.Default.StartEnd" parent="AppTheme">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Button.Disable" parent="AppTheme">
        <item name="android:enabled">false</item>
        <item name="background">@android:color/darker_gray</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="Button.Enable" parent="AppTheme">
        <item name="android:enabled">false</item>
        <item name="background">@drawable/rounded_button</item>
    </style>

</resources>